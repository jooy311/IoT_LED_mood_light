<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.eunaecho.gproject.Pixel.PixelActivity">
    <ScrollView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/paper_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pixel"
                android:orientation="vertical">

                <include
                    android:id="@+id/line_1"
                    layout="@layout/paper_line"
                    />
                <include
                    android:id="@+id/line_2"
                    layout="@layout/paper_line"
                />
                <include
                    android:id="@+id/line_3"
                    layout="@layout/paper_line"
                    />
                <include
                    android:id="@+id/line_4"
                    layout="@layout/paper_line"
                    />
                <include
                    android:id="@+id/line_5"
                    layout="@layout/paper_line"
                    />
                <include
                    layout="@layout/paper_line"
                    android:id="@+id/line_6"
                    />
                <include
                    layout="@layout/paper_line"
                    android:id="@+id/line_7"
                    />
                <include
                    layout="@layout/paper_line2"
                    android:id="@+id/line_8"
                    />
            </LinearLayout>

        </HorizontalScrollView>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/canvas"/>

    </HorizontalScrollView>

</LinearLayout>
